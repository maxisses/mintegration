<% include partials/header.ejs %>
    <div class="container">

        <div class="row">

            <div class="col-xl-8 offset-xl-2 py-5">

                <form id="contact-form" method="post" action="/contact" role="form">

                    <div class="messages"></div>

                    <div class="controls">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_name">Vorname *</label>
                                    <input id="form_name" type="text" name="name" class="form-control" placeholder="Bitte tragen Sie Ihren Vornamen ein *" required="required" data-error="Tragen Sie Ihren Vornamen ein.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_lastname">Nachname *</label>
                                    <input id="form_lastname" type="text" name="surname" class="form-control" placeholder="Bitte tragen Sie Ihren Nachnamen ein *" required="required" data-error="Tragen Sie Ihren Nachnamen ein.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_email">Email *</label>
                                    <input id="form_email" type="email" name="email" class="form-control" placeholder="Bitte tragen Sie Ihre e-Mail Adresse ein *" required="required" data-error="Bitte tragen Sie eine gültige Mail Adresse ein.">
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="form_need">Bitte teilen Sie uns mit worum es geht *</label>
                                    <select id="form_need" name="need" class="form-control" required="required" data-error="Worum geht es?">
                                        <option value="Ich möchte bei eurem Projekt mitmachen!">Ich möchte bei eurem Projekt mitmachen!</option>
                                        <option value="Am Projekt teilnehmen">Ich habe Fragen zu euren Projekten.</option>
                                        <option value="Anderes Anliegen">Anderes Anliegen</option>
                                    </select>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="form_message">Nachricht *</label>
                                    <textarea id="form_message" name="message" class="form-control" placeholder="Ihre Nachricht *" rows="4" required="required" data-error="Bitten tragen Sie eine Nachricht ein."></textarea>
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <input type="submit" class="btn btn-success btn-send" value="Absenden">
                            </div>
                        </div>
                        
                    </div>

                </form>

            </div>
            

        </div>
        

    </div>
   


<% include partials/footer.ejs %>