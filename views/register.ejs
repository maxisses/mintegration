<% include partials/header.ejs %>

<h1>Registrierung</h1>

<div class="jumbotron">
<div class="col-md-4">
<form action="/register" method="POST">
    <div class="form-group">
      <label for="InputEmail1">eMail Addresse</label>
      <input type="mail" class="form-control" id="exampleInputEmail1" name="mail" aria-describedby="emailHelp" placeholder="Mail Addresse">
    </div>
    <div class="form-group">
        <label for="InputUsername">Username</label>
        <input type="text" class="form-control" name="username" placeholder="Nutzername">
        <small id="userHelp" class="form-text text-muted">Dein Nutzername brauchst du zum Login und er wird angezeigt wenn du Challenges anlegst, oder Kommentare machst. Du kannst einfach Vor- und Nachnamen nehmen</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Registrieren</button>
  </form>
  </div>
</div>


